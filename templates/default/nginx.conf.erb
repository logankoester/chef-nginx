worker_processes 4;
user http http;

events {
  worker_connections 2048;
  accept_mutex on;
}

http {
  include mime.types;
  default_type application/octet-stream;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay off;
  keepalive_timeout 65;

  client_max_body_size 100m;
  gzip on;

  include sites/*.conf;
}
